#include<iostream>
#include<iomanip> // Added for better formatting
using namespace std;

class node
{
	public:
	string al_name;
	int track_no;
	string track_name;
	node* next = nullptr; // Needed for chaining
};

class hashtable
{
public:
node a[10], temp;
int value, v[10], colli;

	hashtable()
	{
	    for(int i=0;i<10;i++)
	    {
	        a[i].track_no=0;
	        v[i]=-1;
	        a[i].next = nullptr;
	    }
	}

	void insert()
	{
	    int count=0;
		cout<<"Enter Track no. :";
		cin>>temp.track_no;
		cout<<"Enter Track name : ";
		cin>>temp.track_name;
		cout<<"Enter Album name : ";
		cin>>temp.al_name;
		value=hashfunction(temp.track_no);
		if(v[value]==-1||v[value]==-2)
		{
			a[value]=temp;
			v[value]=0;
			cout<<"Track no."<<temp.track_no<<" is inserted at "<<value<<" Location";
		}
		else
		{
			int flag=0;
			colli=value;
			
			while(flag!=1)
			{
				value+=1;
				if(value>=10)
				{
					value=0;
				}
				if(v[value]==-1)
				{
					a[value]=temp;
					v[value]=0;
					a[colli].next=&a[value];
					cout<<"Track no. "<<temp.track_no<<" has collision at "<<colli<<"\nNow Inserted at "<<value;
					flag=1;
					break;
				}
			}
			if(flag==0)
			{
				cout<<"No Empty Place Remain";
			}
		}
	}
  	
	int hashfunction(int key)
	{
		return key%10;	
	}

	void display()
	{
		cout<<"\n******** HASH TABLE ********\n";
		cout<<"+---------------------------------------------------------+\n";
		cout<<"| Index | Track No |     Track Name     |   Album Name   |\n";
		cout<<"+---------------------------------------------------------+\n";
		for(int i=0;i<10;i++)
		{
			cout<<"| "<<setw(5)<<i<<" | "
			    <<setw(9)<<a[i].track_no<<" | "
			    <<setw(18)<<a[i].track_name<<" | "
			    <<setw(15)<<a[i].al_name<<" |\n";
		}
		cout<<"+---------------------------------------------------------+\n";
	}
	
	int search(int key)
	{
	    int flag=0;
	    
	    for(int i=0;i<10;i++)
	    {
	    	if(key==a[i].track_no)
	    	{
	        	flag=1;
	        	cout<<"\nMusic Record Found\n ";
	        	cout<<"\n******** HASH TABLE ********\n";
	        	cout<<"+---------------------------------------------------------+\
